				</includes>
			</resource>
		    <resource>
				<directory>src/main/resources</directory>
				<filtering>false</filtering>
				<excludes>
					<exclude>serviceParams.properties</exclude>										
				</excludes>
			</resource>
	    </resources>
		<testResources>
		  <testResource>
		    <directory>src/test/resources</directory>
			<filtering>true</filtering>
			<includes>
